---
import Header from "../components/Header.astro";
import ValidationModal from "../components/ValidationModal.astro";
import "../styles/global.css";
import "@fontsource-variable/plus-jakarta-sans";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body class="w-full min-h-screen py-[50px] px-[65px] flex flex-col">
    <Header />
    <main class="max-w-[1440px] mx-auto flex-1 flex flex-col">
      <slot />
    </main>

    <ValidationModal />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      #0a244c 0.1%,
      rgba(10, 36, 76, 0.58) 57.35%,
      rgba(10, 36, 76, 0) 142.51%
    );
    font-family: "Plus Jakarta Sans Variable", sans-serif;
    color: white;
  }
</style>
